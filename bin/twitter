#!/usr/bin/env node

var commander = require('commander');
var auth = require('../src/auth');

commander
	.version('0.0.0')

commander
	.command('hi')
	.description('Prints hi')
	.action(function () {
		console.log('Hi');
	});

commander
	.command('login')
	.description('Authenticates yourself.')
	.action(function () {
		auth.requestToken(function(error, requestToken, requestTokenSecret) {
			var url = 'https://twitter.com/oauth/authorize?oauth_token=' + requestToken;

			if (error) {
				console.log('Error');
			}

			console.log('Open the link in your browser, ' + url);
		});
	});

commander.parse(process.argv);
